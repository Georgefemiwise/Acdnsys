# Roboflow API Configuration
# Get your API key from https://roboflow.com
ROBOFLOW_API_KEY=your_roboflow_api_key_here

# Backup Detection API (Optional)
# For fallback detection service
BACKUP_DETECTION_API_KEY=your_backup_api_key_here

# Database Configuration ifor tinyDb
DB_PATH=acdnsys.json

# Detection Service Configuration
SIMILARITY_THRESHOLD=0.75
CONFIDENCE_THRESHOLD=0.6
MAX_DETECTION_RETRIES=3
CACHE_DURATION_MINUTES=30

# SMS Service Configuration (Arkesel)
# Get your API key from https://sms.arkesel.com
ARKESEL_API_KEY=your_arkesel_api_key_here

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Security Configuration
SECRET_KEY=your_secret_key_here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Development Settings
DEBUG=true
LOG_LEVEL=info

# Performance Settings
MAX_CONCURRENT_DETECTIONS=5
REQUEST_TIMEOUT_SECONDS=30

# Notification Settings
SMS_RETRY_ATTEMPTS=2
NOTIFICATION_RATE_LIMIT=100